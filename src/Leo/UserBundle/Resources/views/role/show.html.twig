{% extends 'LeoUserBundle:Default:index.html.twig' %}

{% block body %}
    {{parent()}}
    <h1>{{ 'Role'|trans({}, 'LeoUserBundle') }}</h1>

    <table>
        <tbody>
            <tr>
                <th>{{ 'Id'|trans({}, 'LeoUserBundle') }}</th>
                <td>{{ role.id }}</td>
            </tr>
            <tr>
                <th>{{ 'Role'|trans({}, 'LeoUserBundle') }}</th>
                <td>{{ role.role }}</td>
            </tr>
            <tr>
                <th>{{ 'Users'|trans({}, 'LeoUserBundle') }}</th>
                <td>{%if role.users.count%}
                    <ol>
                        {% for user in role.users %}
                            <li>
                                {{user.username}}
                            </li>
                        {% endfor %}
                    </ol>
                    {%endif%}</td>
                </tr>
            </tbody>
        </table>

        <ul>
            <li>
                <a href="{{ path('role_edit', { 'id': role.id }) }}"><button>{{ 'Edit'|trans({}, 'LeoUserBundle') }}</button></a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                <input type="submit" value="{{ 'Delete'|trans({}, 'LeoUserBundle') }}">
                {{ form_end(delete_form) }}
            </li>
            <li>
                <a href="{{ path('role_index') }}"><button>{{ 'Back to the list'|trans({}, 'LeoUserBundle') }}</button></a>
            </li>
            <li>
                <a href="{{ path('role_new') }}"><button>{{ 'New'|trans({}, 'LeoUserBundle') }}</button></a>
            </li>
        </ul>
        {% endblock %}
