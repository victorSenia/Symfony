{% extends 'LeoUserBundle:Default:index.html.twig' %}

{% block body %}
    {{parent()}}
    <h1>Role</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ role.id }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ role.role }}</td>
            </tr>
            <tr>
                <th>Users</th>
                <td>{%if role.users.count%}
                    <ol>
                        {% for user in role.users %}
                            <li>
                                {{user.username}}
                            </li>
                        {% endfor %}
                    </ol>
                    {%endif%}</td>
                </tr>
            </tbody>
        </table>

        <ul>
            <li>
                <a href="{{ path('role_index') }}"><button>Back to the list</button></a>
            </li>
            <li>
                <a href="{{ path('role_edit', { 'id': role.id }) }}"><button>Edit</button></a>
            </li>
            <li>
                <a href="{{ path('role_new') }}"><button>New</button></a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
                {{ form_end(delete_form) }}
            </li>
        </ul>
        {% endblock %}
