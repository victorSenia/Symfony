{% extends 'LeoUserBundle:Default:index.html.twig' %}

{% block body %}
    {{ parent() }}
    <h1>{{ 'Role list'|trans({}, 'LeoUserBundle') }}</h1>

    <table>
        <thead>
            <tr>
                <th>{{ 'Id'|trans({}, 'LeoUserBundle') }}</th>
                <th>{{ 'Role'|trans({}, 'LeoUserBundle') }}</th>
                <th>{{ 'Users'|trans({}, 'LeoUserBundle') }}</th>
                <th>{{ 'Actions'|trans({}, 'LeoUserBundle') }}</th>
            </tr>
        </thead>
        <tbody>
            {% for role in roles %}
                <tr>
                    <td><a href="{{ path('role_show', { 'id': role.id }) }}">{{ role.id }}</a></td>
                    <td>{{ role.role }}</td>
                    <td>
                        {%if role.users.count%}
                            <ol>
                                {% for user in role.users %}
                                    <li>
                                        {{user.username}}
                                    </li>
                                {% endfor %}
                            </ol>
                        {%endif%}
                    </td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('role_show', { 'id': role.id }) }}"><button>{{ 'Show'|trans({}, 'LeoUserBundle') }}</button></a>
                            </li>
                            <li>
                                <a href="{{ path('role_edit', { 'id': role.id }) }}"><button>{{ 'Edit'|trans({}, 'LeoUserBundle') }}</button></a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('role_new') }}"><button>{{ 'Create a new entry'|trans({}, 'LeoUserBundle') }}</button></a>
        </li>
    </ul>
{% endblock %}
