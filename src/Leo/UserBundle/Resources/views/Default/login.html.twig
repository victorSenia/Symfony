{% block body %}
    {{ parent() }}
    {% if error %}
        <div class="login-content">
            <div class="alert alert-danger fade in m-b-15">
                <strong>Error!</strong>
                {{ error.messageKey|trans({}, 'LeoUserBundle') }}
            </div>
        </div>
    {% endif %}
    <div>
        <form action="{{ path('leo_user_login') }}" method="POST">
            {#            <input type="hidden" name="_target_path" value="/" />#}
            <div>
                <input type="text" placeholder="{{ 'Login or Email Address'|trans({}, 'LeoUserBundle') }}"
                       name="username" value="{{ last_username }}"/>
            </div>
            <div>
                <input type="password" placeholder="{{ 'Password'|trans({}, 'LeoUserBundle') }}" name="password"/>
            </div>
            <div>
                <label>
                    <input type="checkbox" name="remember_me"/> {{ 'Remember Me'|trans({}, 'LeoUserBundle') }}
                </label>
            </div>
            <div>
                <button type="submit">{{ 'Login'|trans({}, 'LeoUserBundle') }}</button>
            </div>
        </form>
        <div>
            <a href="{{ path('user_new') }}">
                <button>{{ 'Create new user'|trans({}, 'LeoUserBundle') }}</button>
            </a>
        </div>
    </div>
{% endblock %}