{% extends 'LeoUserBundle:Default:index.html.twig' %}

{% block body %}
    {{ parent() }}
    <h1>{{'User list'|trans({}, 'LeoUserBundle')}}</h1>

    <table>
        <thead>
            <tr>
                <th>{{'Id'|trans({}, 'LeoUserBundle')}}</th>
                <th>{{'Username'|trans({}, 'LeoUserBundle')}}</th>
                <th>{{'Email'|trans({}, 'LeoUserBundle')}}</th>
                    {#                <th>Password</th>#}
                <th>{{'Is active'|trans({}, 'LeoUserBundle')}}</th>
                <th>{{'Role'|trans({}, 'LeoUserBundle')}}</th>
                <th>{{'Actions'|trans({}, 'LeoUserBundle')}}</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                    <td>{{ user.username }}</td>
                    <td>{{ user.email }}</td>
                    {#                    <td>{{ user.password }}</td>#}
                    <td>
                        {% if user.isActive %}
                            <span style="background: #6d6">{{'active'|trans({}, 'LeoUserBundle')}} </span>
                        {% else %}
                            <span style="background: #B0413E">{{'blocked'|trans({}, 'LeoUserBundle')}}</span>
                        {% endif %}
                    </td>
                    <td>{{ user.role|trans({}, 'LeoUserBundle') }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('user_show', { 'id': user.id }) }}"><button>{{'show'|trans({}, 'LeoUserBundle')}}</button></a>
                            </li>
                            {% if (user.role!="ROLE_SUPER_ADMIN") or (user.role=="ROLE_SUPER_ADMIN" and is_granted("ROLE_SUPER_ADMIN"))%}
                                <li>
                                    <a href="{{ path('user_edit', { 'id': user.id }) }}"><button>{{'edit'|trans({}, 'LeoUserBundle')}}</button></a>
                                </li>
                            {% endif%}
                        </ul>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('user_new') }}"><button>{{'Create a new entry'|trans({}, 'LeoUserBundle')}}</button></a>
        </li>
    </ul>
{% endblock %}
