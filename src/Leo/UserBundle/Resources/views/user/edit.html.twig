{% extends 'LeoUserBundle:Default:index.html.twig' %}

{% block body %}
    {{ parent() }}
    <h1>{{ 'User edit'|trans({}, 'LeoUserBundle') }}</h1>

    {{ form_start(edit_form, {'attr': {'novalidate': 'novalidate'} }) }}
    {{ form_widget(edit_form) }}
    <input type="submit" value="{{ 'Edit'|trans({}, 'LeoUserBundle') }}"/>
    {{ form_end(edit_form) }}

    <ul>
        <li>
            <a class="button"href="{{ path('user_index') }}">
                {{ 'Back to the list'|trans({}, 'LeoUserBundle') }}
            </a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <input type="submit" value="{{ 'Delete'|trans({}, 'LeoUserBundle') }}">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
