{% extends 'LeoUserBundle:Default:index.html.twig' %}

{% block body %}
    {{ parent() }}
    <h1>{{'User edit'|trans({}, 'LeoUserBundle')}}</h1>

    {{ form_start(edit_form) }}
    {{ form_widget(edit_form) }}
    <input type="submit" value="{{'Edit'|trans({}, 'LeoUserBundle')}}" />
    {{ form_end(edit_form) }}

    <ul>
        <li>
            <a href="{{ path('user_index') }}"><button>{{'Back to the list'|trans({}, 'LeoUserBundle')}} </button></a>
