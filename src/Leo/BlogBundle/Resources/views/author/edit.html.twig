{% extends 'LeoBlogBundle:Default:index.html.twig' %}

{% block body %}
    {{parent()}}
    <h1>Author edit</h1>
    <table>
        <tr>
            <th>Id</th>
            <td>{{ author.id }}</td>
        </tr>
        <tr>
            <th>Username</th>
            <td>{{ author.username }}</td>
        </tr>
    </table>
    {{ form_start(edit_form) }}
    {{ form_widget(edit_form) }}
    <input type="submit" value="Edit" />
    {{ form_end(edit_form) }}

    <ul>
        <li>
            <a href="{{ path('author_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
