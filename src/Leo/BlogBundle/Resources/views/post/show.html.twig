{% extends 'LeoBlogBundle:Default:index.html.twig' %}

{% block body %}
    {{parent()}}
    <h1>Post</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ post.name }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ post.text }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        {% if (app.user==post.author or is_granted("ROLE_ADMIN")) %}
            <li>
                <a href="{{ path('post_edit', { 'id': post.id }) }}"><button>Edit</button></a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
                {{ form_end(delete_form) }}
            </li>
        {%endif%}
        <li>
            <a href="{{ path('post_new') }}"><button>New</button> </a>
        </li>
        <li>
            <a href="{{ path('post_index') }}"><button>Back to the list</button></a>
        </li>
    </ul>
{% endblock %}
