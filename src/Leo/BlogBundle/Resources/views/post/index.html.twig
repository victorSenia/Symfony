{% extends 'LeoBlogBundle:Default:index.html.twig' %}

{% block body %}
    {{parent()}}
    <h1>Post list</h1>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Author</th>
                <th>Name</th>
                <th>Text</th>
                <th>Comments</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for post in posts %}
                <tr>
                    <td><a href="{{ path('post_show', { 'id': post.id }) }}">{{ post.id }}</a></td>
                    <td>{{ post.author }}</td>
                    <td>{{ post.name }}</td>
                    <td>{{ post.text }}</td>
                    <td>{{ post.comments.count }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('post_show', { 'id': post.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('post_edit', { 'id': post.id }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <ul>
        <li>
            <a href="{{ path('post_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}