{% extends 'LeoBlogBundle:Default:index.html.twig' %}

{% block body %}
    {{parent()}}
    <h1>Comment list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Author</th>
                <th>Post</th>
                <th>Comment</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for comment in comments %}
                <tr>
                    <td><a href="{{ path('comment_show', { 'id': comment.id }) }}">{{ comment.id }}</a></td>
                    <td>{{ comment.author }}</td>
                    <td>{{ comment.post }}</td>
                    <td>{{ comment.comment }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('comment_show', { 'id': comment.id }) }}"><button>show</button></a>
                            </li>
                            <li>
                                <a href="{{ path('comment_edit', { 'id': comment.id }) }}"><button>edit</button></a>
                            </li>
                            <li>
                                <a href="{{ path('comment_delete', { 'id': comment.id }) }}"><button>delete</button></a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    {#
        <ul>
            <li>
                <a href="{{ path('comment_new') }}">Create a new entry</a>
            </li>
        </ul>#}
{% endblock %}
