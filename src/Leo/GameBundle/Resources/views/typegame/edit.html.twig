{% extends 'LeoGameBundle:Default:index.html.twig' %}
{% form_theme edit_form _self %}

{% block body %}
    {{ parent() }}
    <h1>{{ 'TypeGame edit'|trans({}, 'LeoGameBundle') }}</h1>

    {{ form_start(edit_form) }}
    {{ form_widget(edit_form) }}
    <input type="submit" value="{{ 'Edit'|trans({}, 'LeoGameBundle') }}"/>
    {{ form_end(edit_form) }}

    {{ form_start(delete_form) }}
    <input type="submit" value="{{ 'Delete'|trans({}, 'LeoGameBundle') }}">
    {{ form_end(delete_form) }}
    <ul>
        <li>
            <a class="button"
               href="{{ path('typegame_index') }}">{{ 'Back to the list'|trans({}, 'LeoGameBundle') }}</a>
        </li>
    </ul>
{% endblock %}

        {% block javascripts %}
            {{ parent() }}
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
            <script src="{{ asset('public/js/prototype.js') }}"></script>
        {% endblock %}

{% block _type_game_games_entry_row %}
    <div class="form-group">
        {{ form_widget(form) }}
        <button type="button" class="prototype-remove">Delete game</button>
    </div>
{% endblock %}