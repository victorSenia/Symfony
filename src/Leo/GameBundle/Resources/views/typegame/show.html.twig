{% extends 'LeoGameBundle:Default:index.html.twig' %}

{% block body %}
    {{parent()}}
    <h1>TypeGame</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ typeGame.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ typeGame.name }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        {% if is_granted("ROLE_ADMIN") %}
            <li>
                <a href="{{ path('typegame_edit', { 'id': typeGame.id }) }}"><button>Edit</button></a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
                {{ form_end(delete_form) }}
            </li>
            <li>
                <a href="{{ path('typegame_new') }}"><button>New</button></a>
            </li>
        {%endif%}
        <li>
            <a href="{{ path('typegame_index') }}"><button>Back to the list</button></a>
        </li>
    </ul>
{% endblock %}
