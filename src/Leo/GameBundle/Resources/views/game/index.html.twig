{% extends 'LeoGameBundle:Default:index.html.twig' %}

{% block body %}
    {{parent()}}
    <h1>{{ 'Game list'|trans({}, 'LeoGameBundle') }}</h1>

    <table>
        <thead>
            <tr>
                <th>{{ 'Id'|trans({}, 'LeoGameBundle') }}</th>
                <th>{{ 'Game type'|trans({}, 'LeoGameBundle') }}</th>
                <th>{{ 'Name'|trans({}, 'LeoGameBundle') }}</th>
                <th>{{ 'Play'|trans({}, 'LeoGameBundle') }}</th>
                <th>{{ 'Watch'|trans({}, 'LeoGameBundle') }}</th>
                <th>{{ 'Actions'|trans({}, 'LeoGameBundle') }}</th>
            </tr>
        </thead>
        <tbody>
            {% for game in games %}
                <tr>
                    <td><a href="{{ path('game_show', { 'id': game.id }) }}">{{ game.id }}</a></td>
                    <td>{{ game.typeGame }}</td>
                    <td>{{ game.name }}</td>
                    <td>
                        {%if game.players.count%}
                            <ol>
                                {% for player in game.players %}
                                    <li>
                                        {{player.username}}
                                    </li>
                                {% endfor %}
                            </ol>
                        {%endif%}
                    </td>
                    <td>
                        {%if game.watchers.count%}
                            <ol>
                                {% for watcher in game.watchers %}
                                    <li>
                                        {{watcher.username}}
                                    </li>
                                {% endfor %}
                            </ol>
                        {%endif%}
                    </td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('game_show', { 'id': game.id }) }}"><button>{{ 'show'|trans({}, 'LeoGameBundle') }}</button></a>
                            </li>
                            {% if is_granted("ROLE_ADMIN") %}
                                <li>
                                    <a href="{{ path('game_edit', { 'id': game.id }) }}"><button>{{ 'edit'|trans({}, 'LeoGameBundle') }}</button></a>
                                </li>
                            {%endif%}
                            {#
                                                <li>
                                                    <a href="{{ path('game_delete', { 'id': game.id }) }}"><button>delete</button></a>
                                                </li>#}
                        </ul>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    {% if is_granted("IS_AUTHENTICATED_FULLY") %}
        <ul>
            <li>
                <a href="{{ path('game_new') }}"><button>{{ 'Create a new game'|trans({}, 'LeoGameBundle') }}</button></a>
            </li>
        </ul>
    {%endif%}
{% endblock %}
