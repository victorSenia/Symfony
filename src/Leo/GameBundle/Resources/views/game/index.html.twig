{% extends 'LeoGameBundle:Default:index.html.twig' %}

{% block body %}
    {{parent()}}
    <h1>Game list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Game type</th>
                <th>Name</th>
                <th>Play</th>
                <th>Watch</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for game in games %}
                <tr>
                    <td><a href="{{ path('game_show', { 'id': game.id }) }}">{{ game.id }}</a></td>
                    <td>{{ game.typeGame }}</td>
                    <td>{{ game.name }}</td>
                    <td>{{ game.players.count }}</td>
                    <td>{{ game.watchers.count }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('game_show', { 'id': game.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('game_edit', { 'id': game.id }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('game_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
